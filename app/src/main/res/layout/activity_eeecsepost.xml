<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PostActivities.EEECSEPostActivity">


    <android.support.v7.widget.CardView
        android:layout_margin="30dp"
        app:cardElevation="10dp"

        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:src="@drawable/select_image"
                android:layout_margin="10dp"
                android:id="@+id/ecse_book_image_view"
                android:layout_width="match_parent"
                android:layout_height="150dp" />

            <TextView
                android:textSize="15dp"
                android:textColor="#e90606"
                android:textStyle="bold"
                android:textAlignment="center"
                android:text="**Post only EEE,CSE and Math related books "
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <EditText

                android:textStyle="normal"
                android:id="@+id/ecse_book_description"
                android:hint="Description"
                android:inputType="textMultiLine"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:fontFamily="@font/semibold"
                android:id="@+id/freeText"
                android:layout_marginLeft="15dp"
                android:textSize="30dp"
                android:text="Free"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/ecse_book_location"
                android:hint="Location"
                android:inputType="textMultiLine"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/ecse_book_phoneNumber"
                android:hint="Phone Number"
                android:inputType="phone"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <Button
                android:id="@+id/ecse_post_button"
                android:layout_gravity="center"
                android:text="Post"
                android:textColor="#ffffff"
                android:background="@drawable/button_size"
                android:layout_width="150dp"
                android:layout_height="wrap_content" />

        </LinearLayout>








    </android.support.v7.widget.CardView>



</RelativeLayout>