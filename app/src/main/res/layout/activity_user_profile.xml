<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FragmentActivities.UserProfile">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_margin="15dp"
        android:layout_gravity="center"
        android:src="@drawable/userprofile"
        android:id="@+id/profileImage"
        android:layout_width="150dp"
        android:layout_height="150dp" />




        <EditText

            android:textAlignment="center"
            android:background="@drawable/email_box"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:hint="User Name/Club Name"
            android:id="@+id/nsuName_clubName"
            android:layout_width="300dp"
            android:layout_height="wrap_content" />

        <EditText
            android:layout_marginTop="10dp"
            android:background="@drawable/email_box"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:id="@+id/nsuId"
            android:hint="Address"
            android:layout_width="300dp"
            android:layout_height="wrap_content" />

        <EditText
            android:layout_marginTop="10dp"
            android:background="@drawable/email_box"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:id="@+id/phone_number"
            android:inputType="number"
            android:hint="Phone Number"
            android:layout_width="300dp"
            android:layout_height="wrap_content" />



    <LinearLayout
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <Button

            android:id="@+id/saveInfoButton"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            android:text="Save Info"
            android:background="@drawable/button_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/callButton"
            android:layout_marginLeft="150dp"
            android:textColor="#ffffff"
            android:text="Call"
            android:background="@drawable/button_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


</LinearLayout>