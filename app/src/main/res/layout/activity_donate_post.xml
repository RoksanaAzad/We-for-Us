<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PostActivities.DonatePostActivity">

    <android.support.v7.widget.CardView
        android:layout_margin="30dp"
        app:cardElevation="10dp"

        android:layout_width="match_parent"
        android:layout_height="350dp">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <EditText

                android:id="@+id/about_donation"
                android:hint="Write about donation"
                android:inputType="textMultiLine"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />



            <EditText
                android:id="@+id/cellNo"
                android:hint="phone number for contact"
                android:inputType="textMultiLine"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />



            <EditText
                android:id="@+id/othersInfo"
                android:hint="Others info,e.g. Account No/bKash no"
                android:inputType="textMultiLine"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <Button
                android:id="@+id/post_button_donate"
                android:layout_gravity="center"
                android:text="Post"
                android:textColor="#ffffff"
                android:background="@drawable/button_size"
                android:layout_width="150dp"
                android:layout_height="wrap_content" />

        </LinearLayout>








    </android.support.v7.widget.CardView>


</LinearLayout>